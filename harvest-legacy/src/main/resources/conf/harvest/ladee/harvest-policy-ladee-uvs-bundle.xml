<?xml version="1.0" encoding="UTF-8"?>

<!--
  Harvest Tool Policy File

  This policy file corresponds with the LADEE UVS Bundle 
  generated by the Atmospheres Node. 
-->

<policy xmlns="https://pds.nasa.gov/software/pds4/harvest/v1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:harvest="https://pds.nasa.gov/software/pds4/harvest/v1"
  xsi:schemaLocation="https://pds.nasa.gov/software/pds4/harvest/v1 https://pds.nasa.gov/software/pds4/harvest/v1/harvest-policy.xsd">

  <registryPackage>
    <name>Harvest Package Atmospheres LADEE UVS Bundle Product</name>
    <description>This is a Harvest run of the Atmospheres LADEE UVS Bundle product.</description>
  </registryPackage>

  <directories>
    <path>/PDS/data/anonymous/PDS/data/PDS4/LADEE/uvs_bundle</path>
    <fileFilter>
      <include>*.xml</include>
      <include>*.XML</include>
    </fileFilter>
    <directoryFilter>
      <exclude>calibration</exclude>
      <exclude>context</exclude>
      <exclude>data_calibrated</exclude>
      <exclude>data_raw</exclude>
      <exclude>document</exclude>
      <exclude>xml_schema</exclude>
    </directoryFilter>
  </directories>

  <accessUrls harvest:registerFileUrls="false">
    <accessUrl>
      <baseUrl>http://atmos.nmsu.edu/PDS</baseUrl>
      <offset>/PDS/data/anonymous/PDS</offset>
    </accessUrl>
  </accessUrls>

  <checksums harvest:generate="true" />

  <candidates>
    <namespace harvest:prefix="ladee" harvest:uri="http://pds.nasa.gov/pds4/ladee/v1"/>
  </candidates>
</policy>
